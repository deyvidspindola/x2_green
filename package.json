{
  "name": "x2-green-core",
  "version": "1.0.0",
  "description": "Core to X2 Green",
  "main": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "scripts": {
    "build": "yarn run clean && ttsc -P tsconfig.build.json && copyfiles -u 1 src/**/*.json dist",
    "clean": "rimraf dist",
    "start": "pm2 start ./dist/index.js --name x2_green",
    "restart": "yarn build && pm2 restart x2_green",
    "stop": "pm2 stop x2_green"
  },
