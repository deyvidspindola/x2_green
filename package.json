  "license": "ISC",
  "directories": {
    "lib": "dist"
  },
  "engines": {
    "node": "~18.x"
  },
  "dependencies": {
    "@grammyjs/menu": "^1.2.1",
    "@types/node": "^20.10.6",
    "@vizir/simple-json-logger": "^4.0.0",
    "axios": "^1.6.7",
    "dotenv": "^16.3.1",
    "grammy": "^1.20.2",
    "grammy-inline-menu": "^8.0.1",
    "http-status-codes": "^2.3.0",
    "js-yaml": "^4.1.0",
    "memory-cache": "^0.2.0",
    "moment": "^2.30.1",
    "moment-timezone": "^0.5.44",
    "mongodb": "^6.3.0",
    "node-cron": "^3.0.3",
    "ttsc": "^0.3.1",
    "typescript-ioc": "^3.2.2"
  },
